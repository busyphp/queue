{
	"name"        : "busyphp/queue",
	"type"        : "library",
	"description" : "支持批量处理队列",
	"homepage"    : "http://www.harter.cn/?form=BusyPHP&plugin=busyphp/queue",
	"keywords"    : [
		"队列",
		"queue"
	],
	"authors"     : [
		{
			"name"  : "busy^life",
			"email" : "busy.life@qq.com"
		}
	],
	"license"     : "CC-BY-NC-4.0",
	"require"     : {
		"php"            : ">=7.1.0",
		"busyphp/swoole" : "^2.0"
	},
	"require-dev" : {
		"symfony/var-dumper" : "^4.2"
	},
	"autoload"    : {
		"psr-4" : {
			"core\\"           : "core",
			"app\\"            : "app",
			"BusyPHP\\queue\\" : "src"
		}
	},
	"scripts"     : {
		"post-autoload-dump" : [
			"@php think service:discover",
			"@php think vendor:publish",
			"@php think bp:install --dev composer.json"
		]
	},
	"extra"       : {
		"busyphp" : {
			"manager"  : {
				"name"    : "消费队列模块",
				"class"   : "BusyPHP\\queue\\app\\controller\\ManagerController",
				"install" : {
					"install_operate"   : {
						"request_confirm" : "确认要安装 <code>__package__</code> 吗？<div class=text-gray>注意：安装会覆盖数据库中的 <code>*_system_queue</code> 表</div>"
					},
					"uninstall_operate" : {
						"request_confirm" : "确认要卸载 <code>__package__</code> 吗？<div class=text-gray>注意：卸载会删除数据库中的 <code>*_system_queue</code> 表</div>"
					}
				}
			},
			"config"   : {
				"queue" : "src/config/config.php"
			},
			"services" : [
				"BusyPHP\\queue\\Service"
			]
		}
	},
	"config"      : {
		"preferred-install" : "dist"
	}
}
